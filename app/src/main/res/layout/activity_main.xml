<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hdw2"
    tools:context=".controllers.MainActivity">

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/main_buttonHome"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/colorPrimary"
                android:text="Home"/>

            <Button
                android:id="@+id/main_buttonRepairs"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/colorPrimary"
                android:text="Repairs"/>

            <Button
                android:id="@+id/main_buttonProfile"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:padding="15dp"
                style="?android:attr/buttonBarButtonStyle"
                android:textColor="@color/colorPrimary"
                android:text="Profile"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/bottom_menu">

        <RelativeLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>

            <Button
                android:id="@+id/main_buttonDiagnosis"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="90dp"
                android:text="Diagnosis"/>

            <Button
                android:id="@+id/main_button1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="150dp"
                android:text="System   (Windows)"/>

            <Button
                android:id="@+id/main_button2"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="150dp"
                android:text="Security"/>

            <Button
                android:id="@+id/main_button3"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="250dp"
                android:text="Memory"/>

            <Button
                android:id="@+id/main_button4"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="250dp"
                android:text="Screen"/>

            <Button
                android:id="@+id/main_button5"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="350dp"
                android:text="Peripherals (Mouse, keyboard)"/>

            <Button
                android:id="@+id/main_button6"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="350dp"
                android:text="Battery"/>

            <Button
                android:id="@+id/main_button7"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="450dp"
                android:text="Button 7"/>

            <Button
                android:id="@+id/main_button8"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="450dp"
                android:text="Button 8"/>

            <Button
                android:id="@+id/main_button9"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="550dp"
                android:text="Button 9"/>

            <Button
                android:id="@+id/main_button10"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:padding="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="550dp"
                android:text="Button 10"/>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>